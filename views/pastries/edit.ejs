<%- include('../partials/header') %>

  <hr>
  <div class="newProduct" style="padding: 0 10px 0 10px">
  <form action="/pastries/<%= itemEdit._id %>?_method=PUT" method="POST">
  
    <label>Pastry Name:
      <input type="text" required name="title" value="<%= itemEdit.title %>">
    </label><br>
    <label>Price:
      <input type="number" min="0.00" max="10000.00" step="0.01" name="price" value="<%= itemEdit.price %>">
    </label><br>
    <label>Detail:
     
        <textarea type="text" required name="detail" style="height: 100px; width: 100%; text-align: justify;"><%= itemEdit.detail %></textarea>
    </div>
      </label><br>
      <input type="submit" value="Save Update">

      
      </form>
       
